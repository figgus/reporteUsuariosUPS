@using Reporte_Log_Usuarios.Models;
@{
    ViewBag.Title = "EditarRelacionProv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<script src="~/Scripts/js/jsMantenedores/jsDatatable.js"></script>
<script type="text/javascript">
    $(document).ready(
        function () {
            $('#btnGuardar').click(function () {
                $.ajax({
                    data: $('#formulario').serialize(),
                    url: "@Url.Action("Editar", "Mantenedor")",
                    type: "post",
                success: function (response) {
                    //alert(response);
                    if (response === 'true') {
                        $("#msj").show(2000).delay(2000).fadeOut(2000);
                        setTimeout(function () { $(location).attr('href', '@Url.Action("RelacionProveedor", "Reporte")'); }, 4000);
                    }
                    else {
                        $("#alert").show(2000).delay(2000).fadeOut(2000);
                    }
                }
            });
        });
    }
    );
</script>

<body class="contact-page">
    <div id="ModalMap" class="wrap-body">
        <section id="container">
            <div class="wrap-container">
                <div class="crumbs">
                    <ul></ul>
                </div>
                <div class="zerogrid">
                    <div class="row">
                        <h1 class="t-center" style="margin: 40px 0;color: #212121;letter-spacing: 2px;font-weight: 500;">Editar Registro</h1>
                        <div class="col-full">
                            <div class="table-responsive">
                                <div class="wrap-col">
                                    <div id="msj" align="center" name="msj" class="alert alert-success">
                                        Datos guardados con exito
                                    </div>
                                    <div id="alert" align="center" name="alert" class="alert alert-danger">
                                        Error al insertar
                                    </div>
                                    <center>
                                        <form id="formulario">
                                            <input type="hidden" name="bd" id="bd" value="RelProveedor" />
                                            <table>
                                                <tr>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <td>ID</td>
                                                    <td><input class="form-control" type="text" id="id" name="id" value="@Request["idRelProv"]" readonly /></td>
                                                </tr>
                                                <tr>

                                                    <td>código proveedor softland></td>
                                                    <td><input class="form-control" type="text" id="codProvS" name="codProvS" value="@Request["codProvS"]" /></td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        Razón social
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="text" id="razonSocial" value="@Request["razonSocial"]" name="razonSocial" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        Codigo Proveedor UPS (SUPPLIER_NUM)
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="text" value="@Request["codProvU"]" id="codProvU" name="codProvU" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        UPS Site ID (SUPPLIER_SITE_CODE)
                                                    </td>
                                                    <td>
                                                        <input class="form-control" type="text" value="@Request["siteId"]" id="siteId" name="siteId" />
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td></td>
                                                    <td><input type="button" class="btn btn-primary" id="btnGuardar" name="btnGuardar" value="Guardar" /></td>
                                                </tr>
                                            </table>
                                        </form>
                                    </center>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </section>
    </div>
</body>